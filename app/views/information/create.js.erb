function refreshForm(innerHTML) {
  const newInformationForm = document.getElementById('new_information');
  newInformationForm.innerHTML = innerHTML;
}

function addInformation(informationHTML) {
  const post_window = document.getElementById('new-post-window');
  post_window.insertAdjacentHTML('afterend', informationHTML);
}

addInformation('<%= j render "root_path", information: @information %>');
refreshForm('<%= j render "shared/form", information: Information.new %>');

