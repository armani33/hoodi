<!-- display event just created -->

<div class="card">
  <div class="ribbon-event ribbon color-event">
    <span>Event</span>
  </div>
  <div class="card-top">
    <div class="card-avatar">
    </div>
    <div class="user-name"><%= event.user.first_name %>
    </div>
    <div class="card-time"> <%= Time.now.utc.hour - event.created_at.hour%>hrs - <%= image_tag("image_after_hour_card", alt: "logo", class: "logo") %>
    </div>
  </div><!-- end card-top -->
  <div class="card-content">
    <h1><%=event.title %></h1>
    <p><%=event.content%></p>
  </div><!-- end card-content -->
  <div class="card-footer">
    <div class="img-footer">
      <%= image_tag("event", alt: "logo", class: "logo-footer")%> Saved post
    </div>
    <div class="img-footer">
      <%= image_tag("comment", alt: "logo", class: "logo-footer")%> Comment
    </div>
    <div class="img-footer">
      <%= image_tag("map-pin", alt: "logo", class: "logo-footer")%> Location
    </div>
  </div><!-- end card-footer -->
</div><!-- end card -->

