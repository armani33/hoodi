<!-- display event just created -->

<div class="card pink-card">

  <div class="body-card">
    <div class="card-content">
      <span class="post-badge">EVENT</span>
      <p><%= event.content %></p>
    </div><!-- end card-content -->
    <div class="card-top">
      <div class="avatar-medium">
        <%= cl_image_tag(event.user.photo, {class: "avatar-medium"}) %>
      </div>
      <div class="user-name">
          <div class="time time-event">
            <h2><%= event.user.first_name%></h2>
            <i class="fas fa-circle"></i>
            <p><%= Time.now.utc.hour - event.created_at.hour %> hrs ago </p>
          </div>
          <div class="distance">
            <%= image_tag("image_after_hour_card.png", alt: "time") %>
            <p>400m away</p>
          </div>
      </div>
      <div class="option-menu">
        <%= image_tag("dropdown_menu_card.png", class: "dropdown-card") %>
      </div>
    </div>
  </div>


  <!-- end card-content -->
  <div class="card-footer">
    <div class="footer-link">
      <%= link_to root_path do %>
        <%= image_tag("invited.png", alt: "logo", class: "logo-footer")%> Respond
      <% end %>
    </div>
    <div class="footer-link">
      <%= link_to root_path do %>
        <%= image_tag("comment.png", alt: "logo", class: "logo-footer")%> Comment
      <% end %>
    </div>
    <div class="footer-link footer-link-localisation">
      <a href="/" lat="<%= event.user.latitude %>" lng="<%= event.user.longitude %>" data-userimage="<%= event.user.photo %>">
        <%= image_tag("map_icon.svg", alt: "logo", class: "logo-footer-mapzer")%> Location
      </a>
    </div>
  </div>
  <!-- end card-footer -->
</div>
<!-- end card -->

