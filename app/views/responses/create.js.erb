function refreshForm(innerHTML) {
  const newResponseForm = document.getElementById('new-response');
  newResponseForm.innerHTML = innerHTML;
}

function addResponse(responseHTML) {
  const responses = document.getElementById('response');
  responses.insertAdjacentHTML('afterend', responseHTML);
}

<% if @response.errors.any? %>
  refreshForm('<%= j render "favours/show", favour: favour, response: @response %>');
<% else %>
  addResponse('<%= j render "responses/show", response: @response %>');
  refreshForm('<%= j render "responses/form", favour: favour, response: Response.new%>');
<% end %>
