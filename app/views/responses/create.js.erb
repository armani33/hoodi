// Selector
  // Favour
const newResponseFormFavour = document.getElementById('response_content');
const responsesFavour = document.getElementById('response-display');
  // Information
const newResponseFormInfo = document.getElementById('response_content');
const responsesInfo = document.getElementById('response-display-info');
// Function
function refreshForm(newResponseForm) {
  newResponseForm.value= "";
}
function addResponse(responses, responseHTML) {
  responses.insertAdjacentHTML('afterend', responseHTML);
}

// Processing
  // Favour
addResponse(responsesFavour, '<%= j render "responses/show", response: @response %>');
refreshForm(newResponseFormFavour);
  //Information
addResponse(responsesInfo, '<%= j render "responses/show", response: @response %>');
refreshForm(newResponseFormInfo);
