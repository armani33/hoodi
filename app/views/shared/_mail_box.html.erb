<%= render 'messages/index' %>
<div class="message-nav-bar">
  <p>Mail Box : <%= current_user.first_name %></p>
  <p><%= @messages.length %> messages</p>
</div>
<% if @messages.empty? %>
<h3>No messages</h3>
<% else %>
<% @messages.each do |message| %>
<div class="message-container">

  <div class="message-sender">
    <%= cl_image_tag(message.user.photo, {class: "avatar-medium"}) %>
    <%= message.user.first_name %> <%= message.user.last_name %>:
  </div>
  <div class="favour-reference">
    Response to your favour: <%= message.favour.content %>
  </div>
  <div class="favour-content">
    <%= message.help_content %>
  </div>
</div>
<% end %>
<% end %>
