<%= simple_form_for post, url: url, method: :post, remote: true do |f| %>
  <!-- [...] -->
  <%= f.input :title %>
  <% if post.is_a? Event %>
    <%= f.input :date %>
    <%= f.input :location %>
  <% end %>
  <%= f.input :content %>
  <%= f.input :perimeter %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.button :submit %>
<% end %>
