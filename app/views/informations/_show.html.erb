<!-- display information just created -->

<div class="card">
  <div class="ribbon-info ribbon color-info">
    <span>Information</span>
  </div>
  <div class="card-top">
    <div class="avatar-medium">
      <%= image_tag("default_avatar_hoodi", alt: "logo", class: "avatar-medium") %>
    </div>
    <div class="user-name">
      <h2><%= information.user.first_name %></h2>
      <div class="time">
        <p><%= Time.now.utc.hour - information.created_at.hour %> hrs - </p>
        <%= image_tag("image_after_hour_card", alt: "logo", class: "logo") %>
      </div>
    </div>
  </div><!-- end card-top -->
  <div class="card-content">
    <h1><%=information.title %></h1>
    <p><%=information.content%></p>
  </div><!-- end card-content -->
  <div class="card-footer">
    <div class="img-footer">
      <%= image_tag("saved", alt: "logo", class: "logo-footer")%> Saved post
    </div>
    <div class="img-footer">
      <%= image_tag("comment", alt: "logo", class: "logo-footer")%> Comment
    </div>
    <div class="img-footer">
      <%= image_tag("mapzer", alt: "logo", class: "logo-footer-mapzer")%> Location
    </div>
  </div><!-- end card-footer -->
</div><!-- end card -->

