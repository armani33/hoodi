<!-- display favour just created -->

<div class="card">
  <div class="ribbon-favour ribbon color-favour">
    <span>Favour</span>
  </div>
  <div class="card-top">
    <div class="avatar-medium">
      <%= image_tag("default_avatar_hoodi", alt: "logo", class: "avatar-medium") %>
    </div>
    <div class="user-name">
      <h2><%= favour.user.first_name %></h2>
      <p><%= Time.now.utc.hour - favour.created_at.hour%>hrs - <%= image_tag("image_after_hour_card", alt: "logo", class: "logo") %></p>
    </div>
  </div><!-- end card-top -->
  <div class="card-content">
    <h1><%=favour.title %></h1>
    <p><%=favour.content%></p>
  </div><!-- end card-content -->
  <div class="card-footer">
    <div class="img-footer">
      <%= image_tag("images.handlove", alt: "logo", class: "logo-footer")%> Saved post
    </div>
    <div class="img-footer">
      <%= image_tag("comment", alt: "logo", class: "logo-footer")%> Comment
    </div>
    <div class="img-footer">
      <%= image_tag("map-pin", alt: "logo", class: "logo-footer")%> Location
    </div>
  </div><!-- end card-footer -->
</div><!-- end card -->

